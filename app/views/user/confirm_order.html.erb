<%= render 'top_nav_bar', view:'menu' %>
<%= render 'side_nav', view:'menu' %>
<fieldset class='small-8 small-centered text-center columns'>
  <legend>Current Order</legend>
  <% @items.each do |item| %>
    <div class='panel'>
      <% menuitem = MenuItem.where(:id => item.item).first %>
      <%= menuitem.name %>: 
      <%= number_to_currency(menuitem.price) %><br>
      Notes: <%= item.notes %><br>
      <%= link_to 'Remove', order_items_remove_item_path(:item => menuitem.id) %><br>
    </div>
  <% end %>
  Total: <%= number_to_currency(@check.total) %>
  <%= link_to 'Confirm Order', guest_path, class:'button radius success' %>
</fieldset>
